<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingRight="15dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="15dp"
        android:background="@drawable/button_border_claro"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/centroTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Centro educativo: "
                android:textSize="8dp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/formulariosCentro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="9dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fechaTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de observaciÃ³n: "
                android:textSize="8dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/formulariosListaFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="10dp" />
        </LinearLayout>

        <!--
        <TextView
            android:id="@+id/formulariosListaCodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            />



        <TextView
            android:id="@+id/formulariosDatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            />
-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gradoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grado: "
                android:textSize="8dp"
                android:textStyle="bold"/>

            <TextView
                    android:id="@+id/formulariosListaGrado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="10dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/AsignaturaTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asignatura: "
                android:textSize="8dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/formulariosListaAsignatura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="10dp" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>